{
    "name": "Tontine App - Gestion de Tontines",
    "short_name": "Tontine",
    "description": "Application de gestion complète de tontines avec paiements, clients et rapports avancés",
    "start_url": "/",
    "display": "standalone",
    "background_color": "#1e40af",
    "theme_color": "#2563eb",
    "orientation": "portrait-primary",
    "scope": "/",
    "lang": "fr",
    "dir": "ltr",
    "categories": ["business", "finance", "productivity"],
